{
  "compilerOptions": {
    "module": "commonjs",
    "target": "esnext",
    "moduleResolution": "node",
    "declaration": true,
    "outDir": "./dist",
    "removeComments": false,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "resolveJsonModule": true,
    "esModuleInterop": true
  },
  "include": ["src"],
  "exclude": [
    "node_modules", "**/__tests__/*", "src/raw"
  ]
}